<div class="container">
  <h1>All Restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-product">
        <%# <%= image_tag "", alt: "text" %>
        <div class="card-product-infos">
          <h2><%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none text-black' %></h2>
        </div>
      </div>
    <% end %>
    <div class="cards">
      <div class="card-product">
        <%= link_to 'Create New Restaurant', new_restaurant_path, class: "btn btn-dark py-5 px-5"  %>
      </div>
    </div>
  </div>
</div>
